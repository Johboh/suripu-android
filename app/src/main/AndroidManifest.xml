<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="is.hello.sense" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <instrumentation
        android:name="com.google.android.apps.common.testing.testrunner.GoogleInstrumentationTestRunner"
        android:targetPackage="is.hello.sense" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".SenseApplication">

        <activity
            android:name=".ui.activities.LaunchActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Launch">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.activities.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activities.OnboardingActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Onboarding"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.QuestionsActivity"
            android:label="@string/label_new_question"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activities.DebugActivity"
            android:label="@string/activity_debug"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Underside" />

        <activity
            android:name=".ui.activities.SensorHistoryActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:theme="@style/AppTheme.Underside" />

        <activity
            android:name=".ui.activities.SmartAlarmDetailActivity"
            android:label="@string/action_alarm"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:theme="@style/AppTheme.Underside" />

        <activity
            android:name=".ui.activities.SessionLogViewerActivity"
            android:label="Session Log"
            android:parentActivityName=".ui.activities.HomeActivity" />

        <activity
            android:name=".ui.fragments.VideoPlayerActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.common.FragmentNavigationActivity"
            android:theme="@style/AppTheme.Underside" />

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <!--region Widgets-->

        <receiver
            android:name=".remote.RoomConditionsWidgetProvider"
            android:label="@string/widget_label_room_conditions">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.ACTION_APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.ACTION_APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/room_conditions_appwidget_info" />

        </receiver>

        <receiver
            android:name=".remote.LastNightWidgetProvider"
            android:label="@string/widget_label_last_night">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.ACTION_APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.ACTION_APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/last_night_appwidget_info" />

        </receiver>

        <service android:name=".remote.RoomConditionsWidgetProvider$UpdateService" />
        <service android:name=".remote.LastNightWidgetProvider$LastNightService" />

        <!--endregion-->

        <activity
            android:name="net.hockeyapp.android.UpdateActivity" />
        
        <activity
            android:name="net.hockeyapp.android.FeedbackActivity" />

        <meta-data android:name="com.crashlytics.ApiKey" android:value="f464ccd280d3e5730dcdaa9b64d1d108694ee9a9"/>

    </application>

</manifest>

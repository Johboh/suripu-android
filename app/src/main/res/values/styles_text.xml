<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Generic -->

    <style name="AppTheme.Text" parent="android:TextAppearance" />

    <style name="AppTheme.Text.Heading">
        <item name="fontPath">fonts/Calibre-Light.otf</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="AppTheme.Text.Heading.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Text.Subheading">
        <item name="fontPath">fonts/Calibre-Thin.otf</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="AppTheme.Text.Subheading.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.Text.ScreenTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontPath">fonts/Calibre-Medium.otf</item>
    </style>

    <style name="AppTheme.Text.Body">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.Body.Bold">
        <item name="fontPath">fonts/Calibre-Medium.otf</item>
    </style>

    <style name="AppTheme.Text.Body.Dimmed">
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="AppTheme.Text.FieldLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Non-generic -->

    <style name="AppTheme.Text.BigScore">
        <item name="android:textSize">96sp</item>
        <item name="fontPath">fonts/Calibre-Thin.otf</item>
    </style>

    <style name="AppTheme.Text.BigScore.Details">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Text.Condition">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.Timestamp">
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:paddingLeft">@dimen/gap_medium</item>
        <item name="android:paddingRight">@dimen/gap_medium</item>
        <item name="android:background">@drawable/timestamp_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Body</item>
    </style>

</resources>
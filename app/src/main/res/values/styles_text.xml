<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Todo rename file to typography.xml -->

    <!-- Start Button Styles -->
    <style name="ButtonText" parent="AppTheme.Text.Header.H6.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_h6_5</item>
        <item name="android:textColor">@color/primary_text_selector</item>
    </style>

    <style name="Button">
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="android:background">@null</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="Button.Raised">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@drawable/sense_raised_button_selector</item>
    </style>

    <!-- Special case for fragment_onboarding_register.xml. Requires an activated state -->
    <style name="Button.Raised.Onboarding">
        <item name="android:background">@drawable/sense_raised_button_selector_onboarding</item>
    </style>

    <style name="Button.Flat" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:textColor">@color/primary_text_selector</item>
        <item name="android:background">@drawable/sense_flat_button_selector</item>
    </style>

    <style name="Button.Flat.Primary">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Button.Flat.Link">
        <item name="android:textColor">@color/link_text_selector</item>
    </style>

    <!-- End Button Styles -->


    <!-- Start Text Styles -->

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Text" parent="android:TextAppearance" />

    <style name="AppTheme.Text.BigScore">
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="AppTheme.Text.BigScore.Details">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Text.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.Body">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.Body.Dimmed">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AppTheme.Text.Condition">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.FieldLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.EditText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
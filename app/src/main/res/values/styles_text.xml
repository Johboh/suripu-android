<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Text" parent="android:TextAppearance" />

    <style name="AppTheme.Text.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.Body">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.FieldLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.EditText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
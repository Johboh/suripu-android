<resources>

    <!-- Themes -->

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>"

        <item name="android:actionBarItemBackground">@drawable/app_theme_selectable_background</item>
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/AppTheme.DropDownNav</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Solid</item>
        <item name="android:actionModeBackground">@drawable/app_theme_cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/app_theme_cab_background_bottom</item>
        <item name="android:actionModeCloseButtonStyle">@style/AppTheme.ActionButton.CloseMode</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflow</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.Text.ActionMenu</item>
        <item name="android:actionMenuTextColor">@color/light_accent</item>
        <item name="android:homeAsUpIndicator">@drawable/app_style_ab_up</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:imageButtonStyle">@style/AppTheme.Button.Borderless</item>
        <item name="android:editTextStyle">@style/AppTheme.Text.EditText</item>
        <item name="android:alertDialogStyle">@style/AppTheme.Dialog</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>

        <item name="android:listDivider">@color/border</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
    </style>

    <style name="AppTheme.Onboarding">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowOnboarding</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Transparent</item>
    </style>

    <style name="ActionOverflowOnboarding" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/action_overflow_onboarding</item>
    </style>

    <style name="ActionOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/action_overflow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="AppTheme.Underside">
        <item name="android:windowBackground">@color/background_underside</item>
    </style>

    <!-- Action Bar -->

    <style name="AppTheme.ActionBar.Solid" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/app_theme_ab_solid</item>
        <item name="android:backgroundStacked">@drawable/app_theme_ab_stacked_solid</item>
        <item name="android:backgroundSplit">@drawable/app_theme_ab_bottom_solid</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/AppTheme.Text.ActionBar</item>
        <item name="android:height">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme.ActionBar.Solid">
        <item name="android:background">@color/transparent</item>
        <item name="android:displayOptions">none</item>
    </style>

    <style name="AppTheme.Text.ActionBar">
        <item name="android:textSize">@dimen/action_bar_text_size</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="AppTheme.Text.ActionMenu">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="AppTheme.PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
    </style>

    <style name="AppTheme.DropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/app_theme_selectable_background</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AppTheme.ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/app_theme_tab_indicator_ab</item>
    </style>

    <style name="AppTheme.DropDownNav" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/app_theme_selectable_background</item>
    </style>

    <style name="AppTheme.ActionButton.CloseMode" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/app_theme_btn_cab_done</item>
    </style>

    <!-- Dialogs -->

    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Dialog" />

    <style name="AppTheme.Dialog.Simple" parent="android:Theme.Holo.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/raised_item_background</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="AppTheme.Dialog.Loading">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animations.SimpleFade</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Animations" />

    <style name="Animations.SimpleFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowShowAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowHideAnimation">@anim/fade_out</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Button</item>
        <item name="android:background">@drawable/button_selector_simple</item>
    </style>

    <style name="AppTheme.Button.Borderless">
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/AvenirLTCom-Light.ttf</item>
        <item name="android:padding">@dimen/gap_small</item>
        <item name="android:background">@drawable/button_selector_dark</item>
    </style>

    <style name="AppTheme.Button.Borderless.Toggle">
        <item name="android:background">@drawable/button_selector_borderless_toggle</item>
    </style>

    <style name="AppTheme.Button.Borderless.White">
        <item name="android:background">@drawable/button_selector_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Borderless.Onboarding">
        <item name="android:textColor">@color/light_accent</item>
    </style>

    <style name="AppTheme.Button.Borderless.White.Thin">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/AvenirLTCom-Light.ttf</item>
    </style>

    <style name="AppTheme.Button.Rounded">
        <item name="android:background">@drawable/selector_button_rounded</item>
        <item name="android:textColor">@color/light_accent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Button.Rounded.Light">
        <item name="android:background">@drawable/selector_button_rounded_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.ModeSelector">
        <item name="android:background">@drawable/mode_selector_button_selector</item>
        <item name="android:textColor">@drawable/toggle_button_text_selector</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Body</item>
    </style>

    <style name="AppTheme.Button.SmartAlarmDay">
        <item name="android:background">@drawable/smart_alarm_day_toggle_selector</item>
        <item name="android:textColor">@drawable/toggle_button_text_selector</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button.Raised">
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@drawable/raised_item_background</item>
        <item name="android:textColor">@color/light_accent</item>
        <item name="android:textAppearance">@style/AppTheme.Text.SectionHeading</item>
    </style>

    <style name="AppTheme.Button.Dialog" parent="AppTheme.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/light_accent</item>
    </style>

    <style name="AppTheme.Button.Dialog.Positive">
        <item name="fontPath">fonts/AvenirLTCom-Heavy.ttf</item>
    </style>

    <!-- Spinners -->

    <style name="AppTheme.Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/app_theme_selectable_background</item>
    </style>

    <!-- Dividers -->

    <style name="Divider">
        <item name="android:background">@color/border</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="Divider.Horizontal.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- EditText -->

    <style name="AppTheme.Text.EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:paddingLeft">@dimen/gap_tiny</item>
        <item name="android:paddingRight">@dimen/gap_tiny</item>

        <item name="android:background">@drawable/edit_text_selector</item>

        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.EditText.Onboarding">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.EditText.Onboarding.Metric">
        <item name="android:paddingLeft">@dimen/gap_small</item>
        <item name="android:paddingRight">@dimen/gap_small</item>

        <item name="android:gravity">center</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:inputType">number</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

</resources>

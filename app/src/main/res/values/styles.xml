<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Dialog" />

    <style name="AppTheme.Dialog.Details">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animations.SimpleFade</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Animations" />

    <style name="Animations.SimpleFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowShowAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowHideAnimation">@anim/fade_out</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Button</item>
        <item name="android:background">@drawable/button_selector_simple</item>
    </style>

    <style name="AppTheme.Button.Borderless">
        <item name="android:padding">@dimen/gap_medium</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Button.Borderless.ThinWhite">
        <item name="android:background">@drawable/button_selector_thinlight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Calibre-Thin.otf</item>
    </style>

    <style name="AppTheme.Button.Question">
        <item name="android:background">@drawable/button_selector_question</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Calibre-Thin.otf</item>
    </style>

    <!-- Dividers -->

    <style name="Divider">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="Divider.Horizontal.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider.Horizontal.Underside">
        <item name="android:background">@color/border_underside</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>

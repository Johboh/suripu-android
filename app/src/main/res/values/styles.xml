<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dialogs -->
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/ProgressBar.Tiny</item>
    </style>

    <style name="Dialog.Simple">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/background_card</item>
    </style>

    <style name="Dialog.List">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Dialog.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.Fade</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_normal
        </item>
    </style>

    <style name="Dialog.FullScreen.Welcome">
        <item name="android:windowBackground">@color/transparent_overlay</item>
    </style>

    <style name="Dialog.Loading" parent="Dialog.FullScreen">
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="Dialog.BottomSheet">
        <item name="android:windowBackground">@color/background_card</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.BottomSlide</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Dialog.BottomAlert" parent="Dialog.BottomSheet">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="WindowAnimations" parent="android:style/Animation"/>

    <style name="WindowAnimations.Fade">
        <item name="android:windowEnterAnimation">@anim/anime_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anime_fade_out</item>
    </style>

    <style name="WindowAnimations.BottomSlide">
        <item name="android:windowEnterAnimation">@anim/anime_bottom_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anime_bottom_slide_down</item>
    </style>

    <style name="Facebook">
        <item name="android:paddingTop">@dimen/x2</item>
        <item name="android:paddingBottom">@dimen/x2</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:background">@drawable/facebook_autofill_selector</item>
        <item name="android:textColor">@color/facebook_autofill_text_color_selector</item>
        <item name="android:drawableLeft">@drawable/facebook_logo_selector</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:text">@string/action_autofill_from_facebook</item>
    </style>

    <style name="FacebookTheme" parent="FacebookTheme.Base"/>

    <style name="FacebookTheme.Base" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/ProgressBar</item>
    </style>

    <!-- Radio Buttons -->
    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:paddingTop">@dimen/x2</item>
        <item name="android:paddingBottom">@dimen/x2</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:paddingStart">@dimen/x3</item>
        <item name="android:button">@drawable/radio_selector</item>
        <item name="android:textAppearance">@style/Body1.Primary</item>
        <item name="android:textColor">@color/primary_text_selector</item>
    </style>

    <!-- In order to allow left padding of radio selector but has issues syncing state with recyclerview adapters when first rendered-->
    <style name="RadioButton.Drawable">
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/radio_selector</item>
        <item name="android:drawablePadding">@dimen/x3</item>
    </style>

    <!-- Dividers -->
    <style name="Divider">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
    </style>

    <style name="Divider.Horizontal.LeftInset">
        <item name="android:layout_marginLeft">@dimen/x2</item>
    </style>

    <style name="Divider.Horizontal.LeftInset.Large">
        <item name="android:layout_marginLeft">@dimen/x9</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_size</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- EditText -->

    <style name="EditText" parent="Platform.EditText">

        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x.25</item>
        <item name="android:paddingRight">@dimen/x.25</item>

        <item name="android:background">@drawable/edit_text_background_selector</item>
        <item name="android:textAppearance">@style/Body1.Primary</item>
        <item name="android:textColor">@color/primary_text_selector</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <!-- Specific Tinting -->

    <style name="TintOverride"/>

    <style name="TintOverride.SleepScore"/>

    <style name="TintOverride.SleepScore.Ideal"/>

    <style name="TintOverride.SleepScore.Warning"/>

    <style name="TintOverride.SleepScore.Alert"/>

    <!-- Other -->

    <style name="AppTheme.Card">
        <item name="android:background">@color/background_card</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="senseCornerRadius">@dimen/small_radius</item>
    </style>

    <style name="AppTheme.LargeCard">
        <item name="senseCornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="AppTheme.Card.Clickable">
        <item name="android:background">@color/background_card</item> <!-- todo show ripple -->
    </style>

    <style name="AppTheme.Card.VerticalPaddingItem">
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:paddingTop">@dimen/x2</item>
        <item name="android:paddingBottom">@dimen/x2</item>
    </style>

    <style name="AppTheme.Card.Item" parent="AppTheme.Card.VerticalPaddingItem">
        <item name="android:paddingLeft">@dimen/x2</item>
        <item name="android:paddingRight">@dimen/x2</item>
    </style>

    <style name="FadingScrollView">
        <item name="android:fillViewport">true</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">@dimen/shadow_size</item>
    </style>

    <!-- Progress Bars -->

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:maxWidth">55dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:maxHeight">55dp</item>
    </style>

    <style name="ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar_small</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="ProgressBar.Tiny">
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar_tiny</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="ProgressBar.White">
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar_white</item>
        <item name="android:minWidth">28dp</item>
        <item name="android:maxWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <!-- Has v21 style -->
    <style name="ProgressBar.Horizontal" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:minWidth">164dp</item>
        <item name="android:maxWidth">164dp</item>
        <item name="android:secondaryProgress">100</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarStyle</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBarStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/background_card</item>
        <item name="android:textAllCaps">true</item>
        <item name="tabSelectedTextColor">@color/tablayout_focused</item>
        <item name="tabTextColor">@color/secondary_text</item>
        <item name="tabIndicatorColor">@color/tablayout_focused</item>
        <item name="tabPaddingStart">@dimen/x1</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar.BottomBar" parent="AppTheme.NoActionBar.TabLayout">
        <item name="android:minHeight">@dimen/action_bar_height</item>
        <item name="tabIndicatorColor">@color/background_card</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="AppTheme.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="AppTheme.AppSettingsActivity">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primary_darkened
        </item>
        <item name="android:windowBackground">@color/background_card</item>
    </style>

    <style name="AppTheme.Expansions" parent="AppTheme.AppSettingsActivity">
        <item name="android:windowBackground">@color/expansions_background</item>
    </style>

    <style name="AppTheme.NoActionBar.VideoPlayer">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="AppTheme.NotificationActivity" parent="AppTheme.AppSettingsActivity">
        <item name="android:homeAsUpIndicator">@drawable/app_style_ab_cancel</item>
        <item name="homeAsUpIndicator">@drawable/app_style_ab_cancel</item>
    </style>

    <style name="AppTheme.SearchListActivity">
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/primary_darkened
        </item>
    </style>

    <style name="AppTheme.NightModeActivity" parent="AppTheme.AppSettingsActivity">
    </style>

</resources>

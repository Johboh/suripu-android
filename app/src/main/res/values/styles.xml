<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:imageButtonStyle">@style/AppTheme.Button.Borderless</item>
        <item name="android:editTextStyle">@style/AppTheme.Text.EditText</item>
        <item name="android:alertDialogStyle">@style/AppTheme.Dialog</item>

        <item name="android:listDivider">@color/border</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
    </style>

    <style name="AppTheme.Onboarding">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowOnboarding</item>
    </style>

    <style name="ActionOverflowOnboarding" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/action_overflow_onboarding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>
    
    <style name="TransparentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.Underside">
        <item name="android:listDivider">@null</item>
        <item name="android:dividerHeight">0dp</item>

        <item name="android:textColor">@color/text_underside</item>
        <item name="android:windowBackground">@color/background_underside</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Dialog" />

    <style name="AppTheme.Dialog.Details">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animations.SimpleFade</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Animations" />

    <style name="Animations.SimpleFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowShowAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowHideAnimation">@anim/fade_out</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Button</item>
        <item name="android:background">@drawable/button_selector_simple</item>
    </style>

    <style name="AppTheme.Button.Borderless">
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/Calibre-Light.otf</item>
        <item name="android:padding">@dimen/gap_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Button.Borderless.Toggle">
        <item name="android:background">@drawable/button_selector_borderless_toggle</item>
    </style>

    <style name="AppTheme.Button.Borderless.White">
        <item name="android:background">@drawable/button_selector_thinlight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Borderless.Onboarding">
        <item name="android:textColor">@color/light_accent</item>
    </style>

    <style name="AppTheme.Button.Borderless.White.Thin">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Calibre-Thin.otf</item>
    </style>

    <style name="AppTheme.Button.Rounded">
        <item name="android:background">@drawable/selector_button_rounded</item>
        <item name="android:textColor">@color/light_accent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/Calibre-Medium.otf</item>
    </style>

    <style name="AppTheme.Button.Rounded.Light">
        <item name="android:background">@drawable/selector_button_rounded_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dividers -->

    <style name="Divider">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="Divider.Horizontal.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider.Horizontal.Underside">
        <item name="android:background">@color/border_underside</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- EditText -->

    <style name="AppTheme.Text.EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:paddingLeft">@dimen/gap_tiny</item>
        <item name="android:paddingRight">@dimen/gap_tiny</item>

        <item name="android:background">@drawable/edit_text_selector</item>

        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.EditText.Onboarding">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.EditText.Onboarding.Metric">
        <item name="android:paddingLeft">@dimen/gap_small</item>
        <item name="android:paddingRight">@dimen/gap_small</item>

        <item name="android:gravity">center</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:inputType">number</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

</resources>

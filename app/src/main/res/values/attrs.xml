<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontPath" format="string"/>

    <declare-styleable name="SensorStateView">
        <attr name="sensorTitle" format="string" />
        <attr name="sensorIcon" format="integer" />
        <attr name="wantsReading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LineGraphView">
        <attr name="lineCount" format="integer" />
        <attr name="gridDrawable" format="integer" />
        <attr name="topLineHeight" format="dimension" />
        <attr name="fill" format="integer" />
        <attr name="wantsHeaders" format="boolean" />
        <attr name="wantsFooters" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GraphView">
        <attr name="senseNumberOfLines" format="integer" />
        <attr name="senseGridDrawable" format="integer" />
        <attr name="senseWantsHeaders" format="boolean" />
        <attr name="senseWantsFooters" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SenseHtmlTextView">
        <attr name="senseHtml" format="integer" />
    </declare-styleable>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontPath" format="string"/>

    <declare-styleable name="GraphView">
        <attr name="fillColor" format="color" />
        <attr name="maxValue" format="integer" />
        <attr name="value" format="integer" />
        <attr name="topInset" format="dimension" />
        <attr name="leftInset" format="dimension" />
        <attr name="rightInset" format="dimension" />
        <attr name="bottomInset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SensorStateView">
        <attr name="sensorTitle" format="string" />
        <attr name="sensorIcon" format="integer" />
        <attr name="wantsReading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LineGraphView">
        <attr name="verticalLines" format="integer" />
        <attr name="horizontalLines" format="integer" />
        <attr name="gridColor" format="color" />
        <attr name="topLineColor" format="color" />
        <attr name="topLineHeight" format="dimension" />
        <attr name="markerColor" format="color" />
        <attr name="fill" format="integer" />
        <attr name="markerSize" format="float" />
        <attr name="wantsMarkers" format="boolean" />
    </declare-styleable>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Text" parent="android:TextAppearance">
        <item name="android:textColor">@color/standard</item>
        <item name="android:textColorLink">@color/text_color_link</item>
    </style>

    <style name="AppTheme.Text.Header">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="AppTheme.Text.Header.H1">
        <item name="android:textSize">@dimen/text_h1</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H1.Thin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H1.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H2">
        <item name="android:textSize">@dimen/text_h2</item>
    </style>

    <style name="AppTheme.Text.Header.H2.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H3">
        <item name="android:textSize">@dimen/text_h3</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H3.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H4">
        <item name="android:textSize">@dimen/text_h4</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H4.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H5">
        <item name="android:textSize">@dimen/text_h5</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H6">
        <item name="android:textSize">@dimen/text_h6</item>
    </style>

    <style name="AppTheme.Text.Header.H6.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H7">
        <item name="android:textSize">@dimen/text_h7</item>
    </style>
    ​

    <style name="AppTheme.Text.Header.H7.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Header.H8">
        <item name="android:textSize">@dimen/text_h8</item>
    </style>

    <style name="AppTheme.Text.Header.H8.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Body">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/standard</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_multiple_body</item>
    </style>

    <style name="AppTheme.Text.Body.Paragraph">
        <item name="android:lineSpacingMultiplier">@dimen/line_multiple_body</item>
    </style>

    <!-- Start Button Styles -->
    <style name="Button" parent="AppTheme.Text.Header.H6.Medium">
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:textSize">@dimen/text_h6_5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@null</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="Button.Raised">
        <item name="android:background">@drawable/sense_raised_button_selector</item>
    </style>

    <!-- Special case for fragment_onboarding_register.xml. Requires an activated state -->
    <style name="Button.Raised.Onboarding">
        <item name="android:background">@drawable/sense_raised_button_selector_onboarding</item>
    </style>

    <style name="Button.Flat">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/sense_flat_button_selector</item>
    </style>

    <style name="Button.Flat.Primary">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- End Button Styles -->
    ​
    ​ ​
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/dialog_sense_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_outer"
        android:drawablePadding="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.ScreenTitle"/>

    <TextView
        android:id="@+id/dialog_sense_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.Body.Light"
        android:lineSpacingMultiplier="1.3"/>

    <View style="@style/Divider.Horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_sense_alert_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/gap_medium"
            android:text="@android:string/cancel"
            android:visibility="gone"
            style="@style/AppTheme.Button.Dialog"/>

        <Button
            android:id="@+id/dialog_sense_alert_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/gap_medium"
            android:text="@android:string/ok"
            android:visibility="gone"
            style="@style/AppTheme.Button.Dialog.Positive"/>

    </LinearLayout>

</LinearLayout>
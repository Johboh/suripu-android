<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/timeline_shareable_view_height"
    android:layout_height="@dimen/timeline_shareable_view_height"
    android:background="@drawable/timeline_share_background_gradient"
    android:padding="@dimen/gap_medium">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/gap_large">

        <RelativeLayout
            android:id="@+id/view_share_timeline_container"
            android:layout_width="@dimen/grand_sleep_summary_width"
            android:layout_height="@dimen/grand_sleep_summary_height"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/sleep_score"
            android:importantForAccessibility="yes">

            <TextView
                android:id="@+id/view_share_timeline_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/gap_xsmall"
                android:importantForAccessibility="no"
                android:textAppearance="@style/AppTheme.Text.Score.Share.Title"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/view_share_timeline_fall_asleep_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/gap_medium"
            android:gravity="center_horizontal"
            android:textAppearance="@style/AppTheme.Text.Score.Share.Text"/>

        <TextView
            android:id="@+id/view_share_timeline_slept_for_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAppearance="@style/AppTheme.Text.Score.Share.Text"/>

        <LinearLayout
            android:id="@+id/view_share_timeline_sensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/timeline_shareable_sensor_marginTop"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitStart"
        android:src="@drawable/hello_lockup"/>

    <TextView
        android:id="@+id/view_share_timeline_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/AppTheme.Text.Score.Share.Date"/>
</RelativeLayout>
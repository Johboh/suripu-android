<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_onboarding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_xlarge">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_xlarge"
            android:textAppearance="@style/AppTheme.Text.Heading"
            android:text="@string/action_log_in"/>

        <EditText
            android:id="@+id/fragment_onboarding_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_small"
            style="@style/AppTheme.Text.EditText.Onboarding"
            android:inputType="textEmailAddress"
            android:nextFocusForward="@+id/fragment_onboarding_password"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:hint="@string/label_email">

            <requestFocus />

        </EditText>

        <EditText
            android:id="@+id/fragment_onboarding_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_large"
            style="@style/AppTheme.Text.EditText.Onboarding"
            android:inputType="textPassword"
            android:imeOptions="actionGo|flagNoExtractUi"
            android:hint="@string/label_password"/>

        <Button
            android:id="@+id/fragment_onboarding_sign_in_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_forgot_password"
            style="@style/AppTheme.Button.Borderless.Onboarding"/>

    </LinearLayout>

</ScrollView>
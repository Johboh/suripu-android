<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_dialog_welcome_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_dialog_welcome">

    <is.hello.sense.ui.widget.PageDots
        android:id="@+id/fragment_dialog_welcome_page_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x.25"
        android:layout_marginBottom="@dimen/x.75"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:dotStyle="white"/>

    <is.hello.sense.ui.widget.ExtendedViewPager
        android:id="@+id/fragment_dialog_welcome_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x2"
        android:layout_above="@id/fragment_dialog_welcome_page_dots"
        android:layout_centerVertical="true"
        android:overScrollMode="never"/>

</RelativeLayout>
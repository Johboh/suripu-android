<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <is.hello.sense.ui.widget.ExtendedViewPager
        android:id="@+id/view_view_pager_extended_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:senseFadingEdgeStyle="rounded">

        <!-- using tabMaxWidth fixes bug with single tabs not filling width -->
        <android.support.design.widget.TabLayout
            android:id="@+id/view_view_pager_tab_layout"
            style="@style/AppTheme.AppCompat.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabMaxWidth="500dp"/>

    </is.hello.sense.ui.widget.ExtendedViewPager>


</RelativeLayout>
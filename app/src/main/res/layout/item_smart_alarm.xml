<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin">

    <ToggleButton
        android:id="@+id/item_smart_alarm_enabled"
        android:layout_width="@dimen/switch_width"
        android:layout_height="@dimen/switch_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/switch_selector"/>

    <TextView
        android:id="@+id/item_smart_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/item_smart_alarm_enabled"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:text="@string/mock_time" />

    <TextView
        android:id="@+id/item_smart_alarm_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_below="@id/item_smart_alarm_time"
        android:layout_toStartOf="@id/item_smart_alarm_enabled"/>

</RelativeLayout>
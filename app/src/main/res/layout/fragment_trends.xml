<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <is.hello.sense.ui.widget.ExtendedScrollView
        android:id="@+id/fragment_trends_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingLeft="@dimen/x1"
        android:paddingRight="@dimen/x1"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        app:senseFadingEdgeStyle="rounded">

        <is.hello.sense.ui.widget.graphing.trends.TrendFeedView
            android:id="@+id/fragment_trends_trendgraph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </is.hello.sense.ui.widget.ExtendedScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <is.hello.sense.ui.widget.SelectorView
        android:id="@+id/fragment_trends_selectorview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </is.hello.sense.ui.widget.SelectorView>

    <is.hello.sense.ui.widget.FixedSwipeRefreshLayout
        android:id="@+id/fragment_trends_refresh_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_trends_selectorview">

        <is.hello.sense.ui.widget.ExtendedScrollView
            android:id="@+id/fragment_trends_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/gap_card_horizontal"
            android:paddingRight="@dimen/gap_card_horizontal"
            android:scrollbars="none">

            <is.hello.sense.ui.widget.graphing.TrendGraphLinearLayout
                android:id="@+id/fragment_trends_trendgraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerPadding="@dimen/gap_card_vertical"
                android:orientation="vertical">

            </is.hello.sense.ui.widget.graphing.TrendGraphLinearLayout>
        </is.hello.sense.ui.widget.ExtendedScrollView>


    </is.hello.sense.ui.widget.FixedSwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/fragment_trends_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</RelativeLayout>
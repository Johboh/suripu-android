<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/x3"
    android:paddingBottom="@dimen/x3">

    <TextView
        android:id="@+id/item_zoomed_out_timeline_day_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x.5"
        android:gravity="center"
        android:textAppearance="@style/Body2.Primary"
        android:text="@string/missing_data_placeholder" />

    <TextView
        android:id="@+id/item_zoomed_out_timeline_day_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x3"
        android:gravity="center"
        style="@style/Body2.Primary"
        android:textAllCaps="true"
        android:text="@string/missing_data_placeholder"/>

    <ProgressBar
        android:id="@+id/item_zoomed_out_timeline_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x3"
        android:layout_marginEnd="@dimen/x3"
        android:layout_marginTop="@dimen/device_detail_progress_margin"
        android:layout_marginBottom="@dimen/device_detail_text_margin"
        android:layout_gravity="center"
        android:visibility="visible"
        style="@style/AppTheme.ProgressBar.Small" />

    <FrameLayout
        android:id="@+id/item_zoomed_out_timeline_score_container"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/x1"
        android:layout_marginRight="@dimen/x1"
        android:layout_gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_zoomed_out_timeline_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Display1"
            android:text="@string/format_date_placeholder" />

    </FrameLayout>


    <is.hello.sense.ui.widget.TimelinePreviewView
        android:id="@+id/item_zoomed_out_timeline_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/gap_large"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_marginRight="@dimen/gap_small"
        android:layout_marginBottom="@dimen/gap_xlarge"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_timeline_event"
    android:clipChildren="false">

    <TextView
        android:id="@+id/item_timeline_segment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginBottom="@dimen/gap_small"
        android:layout_marginEnd="@dimen/gap_medium"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAppearance="@style/AppTheme.Text.Timeline.Timestamp.Event" />

    <TextView
        android:id="@+id/item_timeline_segment_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/gap_small"
        android:layout_toStartOf="@id/item_timeline_segment_date"
        android:layout_centerVertical="true"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/AppTheme.Text.Timeline"
        android:lineSpacingMultiplier="@dimen/line_multiple_body"
        android:maxLines="2" />

</RelativeLayout>
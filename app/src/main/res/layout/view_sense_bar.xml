<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:background="@color/background_card">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_sense_bar_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/x1"
        android:paddingBottom="@dimen/x1"
        android:paddingStart="@dimen/x3"
        android:paddingEnd="@dimen/x3"
        android:background="@drawable/ripple_selector"
        android:tint="@color/active_icon"
        tools:src="@drawable/icon_calendar_24"
        />

    <TextView
        android:id="@+id/view_sense_bar_text"
        style="@style/Title2.Primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingEnd="@dimen/x2"
        android:paddingStart="@dimen/x2"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_sense_bar_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/x1"
        android:paddingBottom="@dimen/x1"
        android:paddingStart="@dimen/x3"
        android:paddingEnd="@dimen/x3"
        android:background="@drawable/ripple_selector"
        android:tint="@color/active_icon"
        tools:src="@drawable/icon_share_24"
        />
</RelativeLayout>
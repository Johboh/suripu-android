<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:fillViewport="true"
    style="@style/AppTheme.LargeCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_dialog_welcome_item_diagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/fragment_dialog_welcome_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_large"
            android:layout_marginLeft="@dimen/gap_outer"
            android:layout_marginRight="@dimen/gap_outer"
            android:textAppearance="@style/AppTheme.Text.ParagraphHeading"
            android:lineSpacingMultiplier="@dimen/line_multiple_paragraph_heading" />

        <TextView
            android:id="@+id/fragment_dialog_welcome_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_medium"
            android:layout_marginLeft="@dimen/gap_outer"
            android:layout_marginRight="@dimen/gap_outer"
            android:layout_marginBottom="@dimen/gap_outer"
            android:textAppearance="@style/AppTheme.Text.Body.MidSized"
            android:lineSpacingMultiplier="@dimen/line_multiple_body_medium" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x3"
        android:layout_marginLeft="@dimen/x3"
        android:layout_marginRight="@dimen/x3"
        android:layout_marginBottom="@dimen/gap_small"
        android:textAppearance="?attr/senseTextAppearanceFieldLabel"
        android:text="@string/label_time_zone"/>

    <include
        android:id="@+id/sub_fragment_device_time_zone_header_current"
        layout="@layout/item_static_choice" />

    <View
        android:layout_marginTop="@dimen/gap_small"
        style="@style/Divider.Horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x3"
        android:layout_marginLeft="@dimen/x3"
        android:layout_marginRight="@dimen/x3"
        android:layout_marginBottom="@dimen/gap_small"
        android:textAppearance="?attr/senseTextAppearanceFieldLabel"
        android:text="@string/label_choose_time_zone"/>

</LinearLayout>
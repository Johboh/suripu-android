<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/gap_xlarge"
    android:paddingLeft="@dimen/gap_large"
    android:paddingRight="@dimen/gap_large"
    android:paddingBottom="@dimen/gap_large">

    <TextView
        android:id="@+id/fragment_onboarding_which_pill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:text="@string/title_onboarding_which_pill"/>

    <TextView
        android:id="@+id/fragment_onboarding_which_pill_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_onboarding_which_pill_title"
        android:layout_marginTop="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.Subheading"
        android:text="@string/info_onboarding_which_pill"/>

    <Button
        android:id="@+id/fragment_onboarding_which_pill_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/title_not_sure"
        style="@style/AppTheme.Button.Borderless.Onboarding" />

    <Button
        android:id="@+id/fragment_onboarding_which_pill_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_onboarding_which_pill_help"
        android:layout_marginBottom="@dimen/gap_small"
        android:text="@string/action_2nd_sleep_pill"
        style="@style/AppTheme.Button.Rounded"/>

    <Button
        android:id="@+id/fragment_onboarding_which_pill_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_onboarding_which_pill_second"
        android:layout_marginBottom="@dimen/gap_medium"
        android:text="@string/action_1st_sleep_pill"
        style="@style/AppTheme.Button.Rounded"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fragment_timeline_event_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_fragment_timeline_event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/gap_medium"
            android:layout_marginTop="@dimen/gap_outer"
            android:layout_marginLeft="@dimen/gap_outer"
            android:layout_marginRight="@dimen/gap_outer"
            android:textAppearance="@style/AppTheme.Text.SectionHeading"
            android:text="@string/app_name"/>

        <ImageButton
            android:id="@+id/dialog_fragment_timeline_event_close"
            android:layout_width="50dp"
            android:layout_height="@dimen/button_min_size"
            android:layout_marginTop="@dimen/gap_small"
            android:src="@drawable/icon_dialog_close"
            android:contentDescription="@string/action_close"
            android:background="@null"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_fragment_timeline_event_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_outer"
        android:lineSpacingMultiplier="@dimen/line_multiple_body"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:text="@string/missing_data_placeholder"/>

    <FrameLayout
        android:id="@+id/dialog_fragment_timeline_event_adjust_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_medium"
        android:visibility="gone">

        <Button
            android:id="@+id/dialog_fragment_timeline_event_adjust_time_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_adjust_time"
            style="@style/AppTheme.Button.Borderless.Accent.Bounded"/>

        <is.hello.sense.ui.widget.TintedProgressBar
            android:id="@+id/dialog_fragment_timeline_event_adjust_time_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            style="@android:style/Widget.Holo.ProgressBar.Small"/>

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <is.hello.sense.ui.widget.SelectorView
        android:id="@+id/fragment_underside_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:paddingTop="@dimen/bottom_line">

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_current_conditions"
            android:checked="true"
            style="@style/AppTheme.Button.ModeSelector"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_trends"
            style="@style/AppTheme.Button.ModeSelector"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/action_insights"
            style="@style/AppTheme.Button.ModeSelector"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/action_alarm"
            style="@style/AppTheme.Button.ModeSelector"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/action_settings"
            style="@style/AppTheme.Button.ModeSelector"/>

    </is.hello.sense.ui.widget.SelectorView>

    <is.hello.sense.ui.widget.FixedViewPager
        android:id="@+id/fragment_underside_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_underside_tabs" />

    <ImageView
        android:id="@+id/fragment_underside_top_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_underside_tabs"
        android:src="@drawable/shadow_top_down"
        android:scaleType="fitXY"
        android:importantForAccessibility="no"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/fragment_underside_bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/shadow_bottom_up"
        android:scaleType="fitXY"
        android:importantForAccessibility="no"
        android:visibility="invisible" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fragment_timeline_segment_details_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dim">

    <RelativeLayout
        android:id="@+id/dialog_fragment_timeline_segment_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_margin"
        android:padding="@dimen/activity_margin"
        android:background="@drawable/dialog_background_details">

        <TextView
            android:id="@+id/dialog_fragment_timeline_segment_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/gap_small"
            android:text="@string/mock_time"
            style="@style/AppTheme.Text.Timestamp"/>

        <TextView
            android:id="@+id/dialog_fragment_timeline_segment_details_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/gap_small"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@id/dialog_fragment_timeline_segment_details_time"
            android:layout_toStartOf="@id/dialog_fragment_timeline_segment_details_time"
            android:textAppearance="@style/AppTheme.Text.Body.Bold"
            android:textSize="18sp"
            android:text="@string/mock_event_type"/>

        <TextView
            android:id="@+id/dialog_fragment_timeline_segment_details_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_timeline_segment_details_time"
            android:textAppearance="@style/AppTheme.Text.Body"
            android:text="@string/mock_event_message"/>

    </RelativeLayout>

</LinearLayout>

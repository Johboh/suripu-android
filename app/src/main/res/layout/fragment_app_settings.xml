<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <is.hello.sense.ui.widget.RoundedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_medium"
            android:layout_marginLeft="@dimen/gap_card_horizontal"
            android:layout_marginRight="@dimen/gap_card_horizontal"
            android:layout_marginBottom="@dimen/gap_card_inter"
            android:orientation="vertical"
            style="@style/AppTheme.Card">

            <TextView
                android:id="@+id/fragment_app_settings_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_account"
                style="@style/AppTheme.Card.Item"/>

            <View style="@style/Divider.Horizontal"/>

            <TextView
                android:id="@+id/fragment_app_settings_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_devices"
                style="@style/AppTheme.Card.Item"/>

            <View style="@style/Divider.Horizontal"/>

            <TextView
                android:id="@+id/fragment_app_settings_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_notifications"
                style="@style/AppTheme.Card.Item"/>

            <View style="@style/Divider.Horizontal"/>

            <TextView
                android:id="@+id/fragment_app_settings_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_units_and_time"
                style="@style/AppTheme.Card.Item"/>

        </is.hello.sense.ui.widget.RoundedLinearLayout>

        <is.hello.sense.ui.widget.RoundedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_card_horizontal"
            android:layout_marginRight="@dimen/gap_card_horizontal"
            android:layout_marginBottom="@dimen/gap_large"
            android:orientation="vertical"
            style="@style/AppTheme.Card">

            <TextView
                android:id="@+id/fragment_app_settings_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_support"
                style="@style/AppTheme.Card.Item"/>

        </is.hello.sense.ui.widget.RoundedLinearLayout>

        <TextView
            android:id="@+id/fragment_app_settings_version"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/gap_outer"
            android:gravity="bottom|center_horizontal"
            android:textAppearance="@style/AppTheme.Text.Body.MidSized.New"
            android:text="@string/app_name"/>

    </LinearLayout>

</ScrollView>
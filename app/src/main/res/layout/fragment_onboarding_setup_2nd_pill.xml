<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_xlarge">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:text="@string/title_onboarding_setup_2nd_pill"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="@style/AppTheme.Text.Subheading"
        android:text="@string/info_onboarding_setup_2nd_pill"/>

    <Button
        android:id="@+id/fragment_onboarding_setup_2nd_pill_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_large"
        android:text="@string/action_setup_another_pill"
        style="@style/AppTheme.Button.Rounded" />

    <Button
        android:id="@+id/fragment_onboarding_setup_2nd_pill_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:text="@string/action_no_thanks"
        style="@style/AppTheme.Button.Borderless.Onboarding" />

</LinearLayout>
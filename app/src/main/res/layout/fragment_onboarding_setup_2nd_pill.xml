<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_onboarding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        style="@style/AppTheme.FadingScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gap_outer"
            android:paddingRight="@dimen/gap_outer"
            android:orientation="vertical"
            android:background="@color/background_onboarding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_outer"
                android:layout_marginBottom="@dimen/gap_medium"
                android:textAppearance="@style/AppTheme.Text.Heading"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:text="@string/title_onboarding_setup_2nd_pill"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_large"
                android:textAppearance="@style/AppTheme.Text.Subheading"
                android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
                android:text="@string/info_onboarding_setup_2nd_pill"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/onboarding_partner_clip"
                android:contentDescription="@string/info_onboarding_setup_2nd_pill"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/fragment_onboarding_setup_2nd_pill_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:text="@string/action_setup_another_pill"
        style="@style/AppTheme.Button.Borderless.Onboarding" />

    <Button
        android:id="@+id/fragment_onboarding_setup_2nd_pill_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_outer"
        android:text="@string/action_no_thanks"
        style="@style/AppTheme.Button.Rounded" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_bottom_sheet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_bottom_sheet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:layout_marginTop="@dimen/x3"
            android:layout_marginBottom="@dimen/x1"
            style="@style/Caption2.Primary"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_bottom_sheet_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_bottom_sheet_title"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:layout_marginBottom="@dimen/x3"
            style="@style/Body1.Secondary"
            android:visibility="gone"/>

        <View
            android:id="@+id/dialog_bottom_sheet_message_divider"
            android:layout_below="@id/dialog_bottom_sheet_message"
            android:visibility="gone"
            style="@style/Divider.Horizontal" />

        <LinearLayout
            android:id="@+id/dialog_bottom_sheet_options"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_bottom_sheet_message_divider"
            android:divider="@drawable/divider_horizontal_inset"
            android:showDividers="middle" />

    </RelativeLayout>

</ScrollView>
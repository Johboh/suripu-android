<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_bottom_sheet_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        android:drawablePadding="@dimen/gap_medium"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Subheading.Dark"
        android:singleLine="true"
        android:ellipsize="end"/>

    <View style="@style/Divider.Horizontal" />

    <LinearLayout
        android:id="@+id/dialog_bottom_sheet_options"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:showDividers="middle" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="is.hello.sense.ui.widget.util.Views"/>
        <variable name="introViewModel"
                  type="is.hello.sense.mvvm.IntroductionViewModel"/>
        <variable
            name="diagramLayerDrawable"
            type="android.graphics.drawable.LayerDrawable"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_onboarding_introduction_button_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_rounded_min_height"
            android:orientation="horizontal"
            android:background="@color/light_accent"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/fragment_onboarding_login_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@{introViewModel.observableLoginButtonWeight, default=1}"
                android:text="@{introViewModel.loginText}"
                android:ellipsize="none"
                android:onClick="@{introViewModel::onLoginButtonClicked}"
                android:alpha="@{introViewModel.observableLoginButtonAlpha}"
                style="@style/AppTheme.Button.Borderless.White"
                tools:text="@string/action_log_in"
                android:maxLines="1"/>

            <View
                android:id="@+id/fragment_onboarding_introduction_button_divider"
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="#66ffffff"
                android:importantForAccessibility="no"
                android:alpha="@{introViewModel.observableLoginButtonAlpha}"/>

            <Button
                android:id="@+id/fragment_onboarding_introduction_get_started"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@{introViewModel.gettingStartedText}"
                android:ellipsize="none"
                style="@style/AppTheme.Button.Borderless.White"
                android:onClick="@{(view) -> introViewModel.onGettingStartedButtonClicked()}"
                tools:text="@string/action_get_started"
                android:maxLines="1"/>

        </LinearLayout>

        <is.hello.sense.ui.widget.PageDots
            android:id="@+id/fragment_onboarding_introduction_page_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fragment_onboarding_introduction_button_bar"
            app:dotStyle="blue" />

        <ImageView
            android:id="@+id/fragment_onboarding_introduction_diagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:importantForAccessibility="no"
            android:src="@{diagramLayerDrawable}"/>

        <is.hello.sense.ui.widget.ExtendedViewPager
            android:id="@+id/fragment_onboarding_introduction_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fragment_onboarding_introduction_button_bar"/>

    </RelativeLayout>

</layout>
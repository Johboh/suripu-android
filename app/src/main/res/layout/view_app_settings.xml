<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/view_app_settings_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_app_settings_my_account"
                    style="@style/Body1.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2"
                    android:text="@string/label_account"/>

                <View style="@style/Divider.Horizontal.LeftInset"/>

                <TextView
                    android:id="@+id/view_app_settings_devices"
                    style="@style/Body1.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2"
                    android:text="@string/label_devices"/>

                <View style="@style/Divider.Horizontal.LeftInset"/>


                <TextView
                    android:id="@+id/view_app_settings_notifications"
                    style="@style/Body1.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2"
                    android:text="@string/label_notifications"/>

                <View style="@style/Divider.Horizontal.LeftInset"/>

                <LinearLayout
                    android:id="@+id/view_app_settings_voice_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/view_app_settings_expansions"
                        style="@style/Body1.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x2"
                        android:text="@string/action_expansions"/>

                    <View style="@style/Divider.Horizontal.LeftInset"/>

                    <TextView
                        android:id="@+id/view_app_settings_voice"
                        style="@style/Body1.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x2"
                        android:text="@string/label_voice"/>

                    <View style="@style/Divider.Horizontal.LeftInset"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/view_app_settings_night_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_night_mode"
                    style="@style/AppTheme.Card.Item"/>

                <View style="@style/Divider.Horizontal.LeftInset"/>

                <TextView
                    android:id="@+id/view_app_settings_support"
                    style="@style/Body1.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    android:padding="@dimen/x2"
                    android:text="@string/action_support"/>

                <View style="@style/Divider.Horizontal.LeftInset"/>


                <TextView
                    android:id="@+id/view_app_settings_share"
                    style="@style/Body1.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x2"
                    android:text="@string/label_tell_a_friend"/>

                <View style="@style/Divider.Horizontal.LeftInset"/>

                <TextView
                    android:id="@+id/view_app_settings_debug"
                    style="@style/Caption2.Hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/x3"
                    tools:text="Sense 0.0.0"/>

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/view_app_settings_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</layout>
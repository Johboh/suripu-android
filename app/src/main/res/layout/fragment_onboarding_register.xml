<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_onboarding">

    <include layout="@layout/sub_fragment_onboarding_toolbar" />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        style="@style/AppTheme.FadingScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/gap_outer"
            android:orientation="vertical"
            android:background="@color/background_onboarding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_xlarge"
                android:textAppearance="@style/AppTheme.Text.Heading"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:text="@string/title_register"/>

            <EditText
                android:id="@+id/fragment_onboarding_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_medium"
                style="@style/AppTheme.Text.EditText.Onboarding"
                android:inputType="textPersonName|textCapWords"
                android:nextFocusForward="@+id/fragment_onboarding_register_email"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:hint="@string/label_name">

                <requestFocus />

            </EditText>

            <EditText
                android:id="@+id/fragment_onboarding_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_medium"
                style="@style/AppTheme.Text.EditText.Onboarding"
                android:inputType="textEmailAddress"
                android:nextFocusForward="@+id/fragment_onboarding_register_password"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:hint="@string/label_email"/>

            <EditText
                android:id="@+id/fragment_onboarding_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_large"
                style="@style/AppTheme.Text.EditText.Onboarding"
                android:inputType="textPassword"
                android:imeOptions="actionGo|flagNoExtractUi"
                android:hint="@string/label_password"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/fragment_onboarding_register_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_large"
        android:layout_marginBottom="@dimen/gap_large"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:text="@string/action_register"
        style="@style/AppTheme.Button.Rounded"/>

</LinearLayout>
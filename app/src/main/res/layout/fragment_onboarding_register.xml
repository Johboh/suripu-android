<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_onboarding">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_xlarge"
        android:stretchColumns="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_xlarge"
            android:textAppearance="@style/AppTheme.Text.Heading"
            android:text="@string/title_register"/>

        <TableRow
            android:layout_marginBottom="@dimen/gap_small">

            <EditText
                android:id="@+id/fragment_onboarding_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/AppTheme.Text.EditText.Onboarding"
                android:inputType="textPersonName"
                android:nextFocusForward="@+id/fragment_onboarding_register_email"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:hint="@string/label_name">

                <requestFocus />

            </EditText>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_small">

            <EditText
                android:id="@+id/fragment_onboarding_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/AppTheme.Text.EditText.Onboarding"
                android:inputType="textEmailAddress"
                android:nextFocusForward="@+id/fragment_onboarding_register_password"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:hint="@string/label_email"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_xlarge">

            <EditText
                android:id="@+id/fragment_onboarding_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/AppTheme.Text.EditText.Onboarding"
                android:inputType="textPassword"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:hint="@string/label_password"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_xsmall"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textAppearance="@style/AppTheme.Text.FieldLabel"
                android:text="@string/label_gender" />

            <Spinner
                android:id="@+id/fragment_onboarding_register_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_xsmall"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textAppearance="@style/AppTheme.Text.FieldLabel"
                android:text="@string/label_height" />

            <Button
                android:id="@+id/fragment_onboarding_register_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_change"
                android:gravity="start"
                style="@style/AppTheme.Button.Borderless.Onboarding"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_xsmall"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textAppearance="@style/AppTheme.Text.FieldLabel"
                android:text="@string/label_weight" />

            <Button
                android:id="@+id/fragment_onboarding_register_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_change"
                android:gravity="start"
                style="@style/AppTheme.Button.Borderless.Onboarding"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_xsmall"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textAppearance="@style/AppTheme.Text.FieldLabel"
                android:text="@string/label_dob" />

            <Button
                android:id="@+id/fragment_onboarding_register_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_change"
                android:gravity="start"
                style="@style/AppTheme.Button.Borderless.Onboarding"/>

        </TableRow>

        <Button
            android:id="@+id/fragment_onboarding_register_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_register"
            style="@style/AppTheme.Button.Borderless.Onboarding"/>

    </TableLayout>

</ScrollView>
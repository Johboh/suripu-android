<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x2">

        <TextView
            android:id="@+id/item_circle_view_name"
            style="@style/Body1.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_circle_view_title"
            style="@style/Title2.Primary"
            android:text="@string/sensor_scale_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_circle_view_value"
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/item_circle_view_circle"/>

        <View
            android:id="@+id/item_circle_view_circle"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x1"/>
    </RelativeLayout>

    <View
        android:id="@+id/item_circle_view_divider"
        style="@style/Divider.Horizontal.LeftInset"/>
</LinearLayout>
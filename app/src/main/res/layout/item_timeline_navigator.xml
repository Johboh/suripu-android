<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_timeline_navigator_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_tiny"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Subheading"
        android:text="@string/mock_score" />

    <TextView
        android:id="@+id/item_timeline_navigator_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Body.Bold"
        android:textAllCaps="true"
        android:text="MONDAY"/>
    
</LinearLayout>
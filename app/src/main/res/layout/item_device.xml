<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin">

    <ImageView
        android:id="@+id/item_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/sense_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_small"
        android:layout_toEndOf="@id/item_device_icon"
        android:textAppearance="@style/AppTheme.Text.Body.Bold"
        android:text="@string/app_name"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/item_device_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_device_name"
        android:layout_toEndOf="@id/item_device_icon"
        android:layout_marginStart="@dimen/gap_small"
        android:layout_marginTop="@dimen/gap_tiny"
        android:text="@string/app_name"
        android:singleLine="true"/>

</RelativeLayout>
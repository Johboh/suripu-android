<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.Card"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_trend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_outer"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.SectionHeading"
        android:text="@string/mock_time"/>

    <is.hello.sense.ui.widget.graphing.GraphView
        android:id="@+id/item_trend_graph"
        android:layout_width="match_parent"
        android:layout_height="@dimen/series_graph_min_height"
        app:senseGridDrawable="@drawable/graph_grid_fill_bottom_up" />

</LinearLayout>
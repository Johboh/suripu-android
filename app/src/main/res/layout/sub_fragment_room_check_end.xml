<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_marginTop="@dimen/gap_outer"
        style="@style/Divider.Horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_outer"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_medium"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:text="@string/onboarding_room_check_title_success"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_large"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:text="@string/onboarding_room_check_info_success"
        android:lineSpacingMultiplier="@dimen/body_text_line_multiple"/>

    <Button
        android:id="@+id/sub_fragment_room_check_end_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_outer"
        android:text="@string/action_continue"
        style="@style/AppTheme.Button.Rounded"/>

</LinearLayout>
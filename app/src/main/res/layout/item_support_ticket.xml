<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/gap_medium"
    android:paddingBottom="@dimen/gap_medium"
    android:paddingLeft="@dimen/gap_outer"
    android:paddingRight="@dimen/gap_outer"
    android:background="@drawable/selectable_dark_bounded">

    <TextView
        android:id="@+id/item_support_ticket_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_small"
        android:maxLines="3"
        android:ellipsize="end"
        android:textAppearance="@style/AppTheme.Text.Body.MidSized" />

    <TextView
        android:id="@+id/item_support_ticket_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_medium"
        android:textAppearance="@style/AppTheme.Text.Body.Small"/>

</LinearLayout>
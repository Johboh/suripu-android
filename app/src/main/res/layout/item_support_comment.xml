<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_timeline_header_card_selector">

    <TextView
        android:id="@+id/item_support_comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_small"
        android:ellipsize="end"
        android:lineSpacingMultiplier="@dimen/line_multiple_body"
        android:textAppearance="@style/AppTheme.Text.Body.MidSized" />

    <TextView
        android:id="@+id/item_support_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        android:textColor="@color/text_medium"
        android:textAppearance="@style/AppTheme.Text.Body.Small"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    style="@style/AppTheme.Card.Clickable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <is.hello.sense.ui.widget.ParallaxImageView
        android:id="@+id/item_insight_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/insight_card_background"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/gap_outer_half"
        android:paddingLeft="@dimen/gap_outer_half"
        android:paddingRight="@dimen/gap_outer_half"
        android:paddingTop="@dimen/gap_outer">

        <TextView
            android:id="@+id/item_insight_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_medium"
            android:layout_marginRight="@dimen/gap_medium"
            android:lineSpacingMultiplier="@dimen/line_multiple_body"
            android:textAppearance="@style/AppTheme.Text.Body"/>

        <View
            android:id="@+id/item_insight_preview_divider"
            style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginBottom="@dimen/gap_medium"
            android:layout_marginTop="@dimen/gap_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_insight_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textAppearance="@style/AppTheme.Text.SectionHeading"/>

            <TextView
                android:id="@+id/item_insight_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textAllCaps="true"
                android:textAppearance="@style/AppTheme.Text.SectionHeading"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/view_expansion_detail_infoid"
        layout="@layout/view_expansion_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_expansion_detail_bottom"
        android:layout_alignParentTop="true"/>

    <is.hello.sense.flows.expansions.ui.widget.ExpansionValuePickerView
        android:id="@+id/view_expansion_detail_expansion_value_picker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_expansion_detail_bottom"
        android:layout_alignParentTop="true"
        android:background="@color/background_light"
        android:visibility="gone"/>

    <include
        android:id="@+id/view_expansion_detail_bottom"
        layout="@layout/view_expansion_detail_action_rows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_light"
              android:padding="@dimen/x2">

    <RelativeLayout
        android:id="@+id/view_expansion_detail_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/view_expansion_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/expansion_icon_min_size"
            android:minWidth="@dimen/expansion_icon_min_size"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/x4"/>

        <TextView
            android:id="@+id/view_expansion_detail_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x1"
            style="@style/AppTheme.Text.Body.Bold"
            android:layout_toEndOf="@+id/view_expansion_detail_icon"/>

        <TextView
            android:id="@+id/view_expansion_detail_device_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/x1"
            style="@style/AppTheme.Text.Body.MidSized.Dim"
            android:layout_toEndOf="@+id/view_expansion_detail_icon"
            android:layout_below="@+id/view_expansion_detail_device_name"/>

        <TextView
            android:id="@+id/view_expansion_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_expansion_detail_icon"/>

        <Button
            android:id="@+id/view_expansion_detail_connect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/action_connect"
            style="@style/AppTheme.Button.Rounded"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_expansion_detail_connected_container"
        android:orientation="vertical"
        android:divider="@drawable/divider_horizontal_inset"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/view_expansion_detail_enabled_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x2"
            android:background="@drawable/selectable_dark_bounded"
            android:visibility="gone">

            <TextView
                android:id="@+id/view_expansion_detail_enabled_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Text.Body.New"
                android:layout_gravity="start|center_vertical"
                android:drawableEnd="@drawable/info_button_icon_small"
                android:drawablePadding="@dimen/x1"
                android:gravity="center"
                android:text="@string/title_enabled"/>

            <Switch
                android:id="@+id/view_expansion_detail_configuration_selection_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/view_expansion_detail_configuration_selection_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x2"
            android:background="@drawable/selectable_dark_bounded">

            <TextView
                android:id="@+id/view_expansion_detail_configuration_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Text.Body.New"
                android:layout_gravity="start|center_vertical"/>

            <TextView
                android:id="@+id/view_expansion_detail_configuration_selection_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Text.Body.Dim"
                android:drawableEnd="@drawable/disclosure_chevron_small"
                android:drawablePadding="@dimen/x1"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/view_expansion_detail_remove_access_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x2"
            android:background="@drawable/selectable_dark_bounded">

            <TextView
                android:id="@+id/view_expansion_detail_remove_access_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Text.Body.New"
                android:textColor="@color/destructive_accent"
                android:text="@string/expansion_detail_remove_access"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/view_expansion_detail_info_top"
        layout="@layout/view_expansion_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_expansion_detail_bottom"
        android:layout_alignParentTop="true"/>

    <include
        android:id="@+id/view_expansion_detail_bottom"
        layout="@layout/view_expansion_detail_action_rows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- This is temporary. Anything using this should be phased to item_message_card -->
<LinearLayout
    style="@style/AppTheme.Card.Clickable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_message_card_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/item_message_card_title"
        style="@style/Body1.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/x2"
        android:paddingRight="@dimen/x2"
        android:paddingTop="@dimen/x2"/>

    <TextView
        android:id="@+id/item_message_card_message"
        style="@style/Body1.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x3"
        android:gravity="center"/>

    <Button
        android:id="@+id/item_message_card_action"
        style="@style/Button.Raised"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x2"
        android:layout_marginLeft="@dimen/x2"
        android:layout_marginRight="@dimen/x2"
        android:text="@android:string/ok"/>

</LinearLayout>
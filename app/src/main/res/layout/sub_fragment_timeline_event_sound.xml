<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/gap_outer"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/sub_fragment_timeline_event_sound_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_medium"
        android:src="@drawable/timeline_play"
        android:contentDescription="@string/action_play_video"/>

    <SeekBar
        android:id="@+id/sub_fragment_timeline_event_sound_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>
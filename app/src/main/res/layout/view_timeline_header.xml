<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_timeline_header_chart"
        android:layout_width="@dimen/grand_sleep_summary_width"
        android:layout_height="@dimen/grand_sleep_summary_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_small">

        <TextView
            android:id="@+id/view_timeline_header_chart_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="@style/AppTheme.Text.BigScore"
            android:text="@string/missing_data_placeholder"/>

        <TextView
            android:id="@+id/view_timeline_header_chart_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/AppTheme.Text.SectionHeading"
            android:text="@string/sleep_score"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/view_timeline_header_chart_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/gap_outer"
        android:textAppearance="@style/AppTheme.Text.Body.MidSized"
        android:gravity="center"
        android:lineSpacingMultiplier="@dimen/line_multiple_body_medium"
        android:text="@string/dialog_loading_message"/>

</merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_row_expansion_alarm_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/smart_alarm_details_row_height"
    android:background="@drawable/selectable_dark_bounded"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/x3"
    android:paddingStart="@dimen/x3">

    <TextView
        android:id="@+id/item_row_expansion_alarm_category"
        style="@style/Body1.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/x1"
        android:drawablePadding="@dimen/x3"
        android:drawableStart="@drawable/icon_alarm_light"
        android:gravity="start|center_vertical"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/item_row_expansion_alarm_value"
            style="@style/Body1.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/item_row_expansion_alarm_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/icon_warning"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_row_expansion_alarm_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/smart_alarm_details_row_height"
    android:background="@drawable/selectable_dark_bounded"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/x3"
    android:paddingStart="@dimen/x3"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_row_expansion_alarm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/x2"
        android:tint="@color/primary_text"
        tools:src="@drawable/icon_thermostat_24"/>

    <TextView
        android:id="@+id/item_row_expansion_alarm_category"
        style="@style/Body1.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/x1"
        android:gravity="start|center_vertical"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/item_row_expansion_alarm_value"
            style="@style/Body1.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/item_row_expansion_alarm_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/icon_warning_24"
            android:tint="@color/destructive_icon"
            android:visibility="gone"
            tools:visibility="visible"/>

    </FrameLayout>

</LinearLayout>
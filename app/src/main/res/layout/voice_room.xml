<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_card"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/x3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x1"
            android:src="@drawable/icon_conditions_large"/>

        <TextView
            style="@style/Title2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="Room Conditions"/>

        <TextView
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="Before each command, say &quot;Okay Sense&quot; to ask about your temperature, humidity, air quality, and more."/>

        <TextView
            style="@style/Body2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6"
            android:gravity="center_horizontal"
            android:text="Temperature"/>


        <TextView
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="What is the temperature?"/>


        <TextView
            style="@style/Body2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6"
            android:gravity="center_horizontal"
            android:text="Humidity"/>


        <TextView
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="What is the humidity?"/>

        <TextView
            style="@style/Body2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6"
            android:gravity="center_horizontal"
            android:text="Noise Level"/>


        <TextView
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="How noisy is it?"/>

        <TextView
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="What is the noise level?"/>


        <TextView
            style="@style/Body2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6"
            android:gravity="center_horizontal"
            android:text="Air Quality"/>

        <TextView
            style="@style/Body1.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:gravity="center_horizontal"
            android:text="How is the air quality?"/>


    </LinearLayout>


</ScrollView>
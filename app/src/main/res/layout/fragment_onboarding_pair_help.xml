<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_xlarge">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:text="@string/title_fragment_onboarding_pair_help"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="@style/AppTheme.Text.Subheading"
        android:text="@string/info_fragment_onboarding_pair_help"/>

    <Button
        android:id="@+id/fragment_onboarding_pair_help_2nd_pill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_large"
        android:text="@string/title_fragment_onboarding_pair_help_2nd_pill"
        style="@style/AppTheme.Button.Rounded" />

    <Button
        android:id="@+id/fragment_onboarding_pair_help_new_sense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_large"
        android:text="@string/title_fragment_onboarding_pair_help_new_sense"
        style="@style/AppTheme.Button.Rounded" />

</LinearLayout>
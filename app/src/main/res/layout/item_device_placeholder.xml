<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gap_outer"
    style="@style/AppTheme.Card">

    <TextView
        android:id="@+id/item_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/sense_icon"
        android:drawablePadding="@dimen/gap_small"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/AppTheme.Text.Actionable"
        android:text="@string/app_name"
        android:singleLine="true"/>

    <View
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        style="@style/Divider.Horizontal"/>

    <TextView
        android:id="@+id/item_device_placeholder_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:text="@string/info_no_sense_connected"
        android:lineSpacingMultiplier="@dimen/body_text_line_multiple"/>

    <Button
        android:id="@+id/item_device_placeholder_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_medium"
        android:text="@string/action_pair_new_sense"
        style="@style/AppTheme.Button.Rounded"/>

</LinearLayout>
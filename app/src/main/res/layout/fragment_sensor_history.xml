<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_sensor_history_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.BigScore"
        android:text="@string/missing_data_placeholder"/>

    <TextView
        android:id="@+id/fragment_sensor_history_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"
        android:textAppearance="@style/AppTheme.Text.BigScore.Details"
        android:text="@string/missing_data_placeholder"/>

    <LinearLayout
        android:id="@+id/fragment_sensor_history_mode_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="@string/title_time_frame_week"
            android:textOff="@string/title_time_frame_week"
            style="@style/AppTheme.Button.Borderless"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="@string/title_time_frame_24_hrs"
            android:textOff="@string/title_time_frame_24_hrs"
            style="@style/AppTheme.Button.Borderless"/>

    </LinearLayout>

    <is.hello.sense.ui.widget.LineGraphView
        android:id="@+id/fragment_sensor_history_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalLines="7" />

</LinearLayout>
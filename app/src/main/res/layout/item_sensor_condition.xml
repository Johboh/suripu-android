<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/raised_item_background"
    android:paddingBottom="@dimen/gap_raised_item_bottom"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/item_sensor_condition_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_outer"
            android:textAppearance="@style/AppTheme.Text.SmallScore"
            android:textColor="@color/sensor_unknown"
            android:text="@string/mock_temperature"/>

        <View
            android:layout_marginTop="@dimen/gap_outer"
            android:layout_marginBottom="@dimen/gap_outer"
            style="@style/Divider.Vertical" />

        <TextView
            android:id="@+id/item_sensor_condition_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_outer"
            android:textAppearance="@style/AppTheme.Text.Body"
            android:text="@string/mock_event_message"
            android:lineSpacingMultiplier="@dimen/body_text_line_multiple"
            android:ellipsize="end" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/condition_graph_height" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#0A000000" />

            <corners
                android:radius="@dimen/raised_item_corner_radius" />
        </shape>
    </item>

    <item
        android:left="@dimen/gap_raised_item_inset_side"
        android:right="@dimen/gap_raised_item_inset_side"
        android:bottom="@dimen/gap_raised_item_inset_bottom">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/background_raised_item_clicked" />

            <corners
                android:radius="@dimen/raised_item_corner_radius" />
        </shape>
    </item>
</layer-list>
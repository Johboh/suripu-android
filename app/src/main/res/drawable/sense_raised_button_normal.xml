<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/button_height"/>
            <gradient
                android:angle="0"
                android:centerColor="@color/sense_raised_button_shadow_dark"
                android:endColor="@color/sense_raised_button_shadow_light"
                android:startColor="@color/sense_raised_button_shadow_light"
                android:type="linear"/>
            <corners
                android:bottomLeftRadius="@dimen/button_shadow_top_corner_radius"
                android:bottomRightRadius="@dimen/button_shadow_top_corner_radius"
                android:topLeftRadius="@dimen/button_shadow_bottom_corner_radius"
                android:topRightRadius="@dimen/button_shadow_bottom_corner_radius"/>
        </shape>
    </item>
    <item>
        <inset
            android:insetBottom="@dimen/button_inset"
            android:insetLeft="@dimen/button_inset"
            android:insetRight="@dimen/button_inset">
            <shape android:shape="rectangle">
                <size android:height="@dimen/button_height"/>
                <corners android:radius="@dimen/button_corner_radius"/>
                <solid android:color="@color/sense_raised_button_normal"/>

            </shape>
        </inset>
    </item>
</layer-list>
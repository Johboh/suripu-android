<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#0A000000" />

            <corners
                android:radius="@dimen/widget_last_night_corner_radius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/background_light" />

            <corners
                android:radius="@dimen/widget_last_night_corner_radius"/>
        </shape>

        <inset
            android:insetLeft="@dimen/gap_raised_item_inset_side"
            android:insetRight="@dimen/gap_raised_item_inset_side"
            android:insetBottom="@dimen/gap_raised_item_inset_bottom" />
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<!--
using ColorStateLists with android:tint only supported v21+
see {@link https://code.google.com/p/android/issues/detail?id=204671}
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:color="@color/disabled_icon"/>
    <item android:state_activated="true" android:color="@color/primary_icon"/>
    <item android:color="@color/active_icon"/>
</selector>